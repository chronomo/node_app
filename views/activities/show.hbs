<div class="row">
    <div class="col s12 m8">
        <h3>
            {{activity.title}}
            <small>{{{editIcon activity.user user activity._id false}}}</small>
        </h3>
        <div class="card activity">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{stripTags activity.body}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{activity.user.displayName}}</span>
                <img src="{{activity.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/activities/user/{{activity.user._id}}">More From {{activity.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>