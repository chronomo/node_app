<h6>Dashboard<h6>
<h3>Welcome {{name}}</h3>
<p>Here are your activities<p>
{{#if activities}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th> 
            </tr>
        </thead>
        <tbody>
            {{#each activities}}
            <tr>
                <td><a href="/activities/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/activities/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
                    <form action="/activities/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE"> 
                        <button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>  
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>There are currently no activities to display</p>
{{/if}}